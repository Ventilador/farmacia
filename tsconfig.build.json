{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": ["es2015", "dom"]
    },
    "exclude": [
        "node_modules",
        "gui/**/*.ts"
    ],
    "include": [
        "mid/**/*.ts"
    ]
}